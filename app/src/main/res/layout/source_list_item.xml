<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sourceName"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:text="Source"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Temperature"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/currTemp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:layout_below="@+id/currTemp"
                android:layout_centerHorizontal="true"
                android:id="@+id/currHumidity"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/currHumidity"
                android:layout_centerHorizontal="true"
                android:text="summary"
                android:id="@+id/summary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="todayMax"
                android:textColor="@color/colorAccent"
                android:id="@+id/currMax"
                android:layout_below="@+id/currHumidity"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="todayMin"
                android:textColor="@color/colorPrimary"
                android:id="@+id/todayMinTempTextView"
                android:layout_below="@+id/currHumidity"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>