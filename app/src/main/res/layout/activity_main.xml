<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.tuesdayhat.weatherdroid.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WeatherDroid"
        android:id="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorTextIcons"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/weatherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Weather"
        android:layout_below="@+id/weatherLocationInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weatherLocationInput"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weatherLocationInput"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="About" />

    <EditText
        android:id="@+id/weatherLocationInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Location"
        android:textAlignment="center"
        android:background="@color/colorTextBox"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/OldReportsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/weatherLocationInput"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/weatherLocationInput"
        android:text="Old Reports" />

</RelativeLayout>
